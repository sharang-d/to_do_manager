<%= @list.title %>
<%= @list.color %>
<%= @list.status %>


<% unless @tasks.empty? %>

<% end %>
<ul id="tasks">
    <%= render partial: 'shared/task', collection: @tasks %>
</ul>

<%= form_for @task, remote: true do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.hidden_field :list_id, value: params[:id] %>
  <%= f.submit "Add" %>
<% end %>