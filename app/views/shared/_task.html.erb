<li id="task<%= task.id %>">
  <div class="content">
    <%= task.content %>
  </div>
  <div class="status">
    <%= task.status %>
  </div>
  <div class="buttons">
    <%= link_to "delete", task, method: :delete, remote: true,
                          data: { confirm: "You sure?" } %>
    <%= link_to "edit", task, method: :get %>
  </div>
</li>